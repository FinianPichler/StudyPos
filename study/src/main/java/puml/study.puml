@startuml

!define Entity(name) class name << (E,#FFAAAA) >>
!define ValueObject(name) class name << (V,#AAFFAA) >>
!define RichType(name) class name << (R,#AAAAFF) >>
!define Enumeration(name) class name << (E,#FFFFAA) >>

Entity(Student) {
  firstName : String
  lastName : String {nn}
  email : Email {nn}
  address : Address
  status : StudentStatus {nn}
  dateOfBirth : LocalDate
}

Entity(Course) {
  title : String {nn}
  credits : Integer {nn}
  maxStudents : Integer
  status : CourseStatus {nn}
}

ValueObject(Address) {
  street : String {nn}
  zipCode : String {nn}
  city : String {nn}
}

RichType(Email) {
  address : String {nn}
}

Enumeration(StudentStatus) {
  ACTIVE("A")
  INACTIVE("I")
  GRADUATED("G")
}

Enumeration(CourseStatus) {
  PLANNED("P")
  RUNNING("R")
  COMPLETED("C")
  CANCELLED("X")
}

Student "0..*" -- "0..*" Course : enrolledIn

@enduml